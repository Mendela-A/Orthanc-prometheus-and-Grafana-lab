{
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "type": "stat",
      "title": "Patients",
      "targets": [{ "expr": "orthanc_count_patients" }],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Studies",
      "targets": [{ "expr": "orthanc_count_studies" }],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Series",
      "targets": [{ "expr": "orthanc_count_series" }],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Instances",
      "targets": [{ "expr": "orthanc_count_instances" }],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "gauge",
      "title": "Disk Usage (GB)",
      "targets": [{ "expr": "orthanc_disk_size_mb / 1024" }],
      "fieldConfig": { "defaults": { "unit": "decgbytes", "decimals": 0 } },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Uncompressed Size (GB)",
      "targets": [{ "expr": "orthanc_uncompressed_size_mb / 1024" }],
      "fieldConfig": { "defaults": { "unit": "decgbytes", "decimals": 0 } },
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "REST API Latency (ms)",
      "targets": [{ "expr": "orthanc_rest_api_duration_ms" }],
      "fieldConfig": { "defaults": { "unit": "ms", "decimals": 0 } },
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Storage I/O Times (ms)",
      "targets": [
        { "expr": "orthanc_storage_create_duration_ms", "legendFormat": "Create" },
        { "expr": "orthanc_storage_read_duration_ms", "legendFormat": "Read" },
        { "expr": "orthanc_store_dicom_duration_ms", "legendFormat": "Store DICOM" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms", "decimals": 0 } },
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Jobs (Completed / Failed / Running)",
      "targets": [
        { "expr": "orthanc_jobs_completed", "legendFormat": "Completed" },
        { "expr": "orthanc_jobs_failed", "legendFormat": "Failed" },
        { "expr": "orthanc_jobs_running", "legendFormat": "Running" }
      ],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Uptime",
      "targets": [{ "expr": "orthanc_up_time_s" }],
      "fieldConfig": { "defaults": { "unit": "dthms", "decimals": 0 } },
      "gridPos": { "x": 12, "y": 16, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Active REST Requests",
      "targets": [{ "expr": "orthanc_rest_api_active_requests" }],
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "x": 18, "y": 16, "w": 6, "h": 4 }
    }
  ],
  "schemaVersion": 37,
  "title": "Orthanc Monitoring",
  "timezone": "browser",
  "version": 2
}
